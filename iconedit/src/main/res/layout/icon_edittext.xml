<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/background_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/icon_left_margin_right"
        android:layout_marginStart="@dimen/icon_left_margin_left"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:cursorVisible="true"
        android:hint="You can input text here."
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/icon_text_color"
        android:textColorHint="@color/icon_text_hint_color"
        android:textCursorDrawable="@drawable/iconedittext_default_text_cursor_bg"
        android:textSize="@dimen/icon_edit_size">

        <requestFocus/>
    </EditText>

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_right_padding"
        android:visibility="gone"/>

</LinearLayout>