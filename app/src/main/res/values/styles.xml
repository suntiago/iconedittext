<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_edit_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/login_edit_marginRight</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="inputType">TYPE_CLASS_NUMBER</item>
        <item name="textSize">14dp</item>
    </style>
</resources>
